{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "apiKey": {
      "description": "API key for the Instatus account (https://instatus.com/app/developer)",
      "type": "string"
    },
    "pageId": {
      "description": "Page ID to update",
      "type": "string"
    },
    "metricId": {
      "description": "Metric ID to update",
      "type": "string"
    }
  },
  "required": ["apiKey", "pageId", "metricId"]
}
